//- Variables
- var lang = 'ru-RU';
- var title = '#'
- var description = '#'
- var keywords = '#'
- var sidebar = true;
block variables

doctype html
html(lang=lang)

	//- Head
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="initial-scale=1.0, width=device-width")
		meta(name="format-detection" content="telephone=no")
		title= title
		meta(name="description" content=description)
		meta(name="keywords" content=keywords)
		<%= htmlWebpackPlugin.tags.headTags %>

		block head

	body
		block start-body
		.wrapper
			include main/main-header
			.main-wrapper
				block content
				block sidebar
			include main/main-footer
		block end-body
