{
  "name": "webpack-5-frontend-starter",
  "version": "1.3.0",
  "description": "Универсальная стартовая frontend сборка Webpack 5 (VUE REACT SCSS PUG TWIG HTML) для одностраничного или многостраничного сайта.",
  "homepage": "https://frontend.uvarov.tech",
  "keywords": [
    "webpack",
    "frontend",
    "layout",
    "multi-page",
    "multiple",
    "pug",
    "twig",
    "html",
    "bem",
    "scss",
    "vue",
    "react",
    "pug-bem",
    "vue-bem",
    "start",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uvarov-frontend/webpack-5-frontend-starter.git"
  },
  "author": {
    "name": "Yuri Uvarov",
    "email": "uvarov.frontend@gmail.com",
    "url": "https://frontend.uvarov.tech"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "utils:analyzer": "webpack-bundle-analyzer --port 4200 build/stats.json",
    "utils:ftp": "node ./utils/ftp",
    "utils:clean": "node ./utils/clean",
    "utils:entry": "node ./utils/entry",
    "temp": "node ./config/temp.js TEMP=true",
    "start": "npm run utils:entry --silent && npm run temp --silent && cross-env NODE_ENV=development webpack serve --config ./config/webpack.dev.js",
    "dev": "npm run utils:entry --silent && npm run temp --silent && cross-env NODE_ENV=development MEASURE=false webpack --config ./config/webpack.dev.js",
    "prod": "npm run utils:entry --silent && npm run temp --silent && cross-env NODE_ENV=production ANALYZER=false webpack --config ./config/webpack.prod.js"
  },
  "browserslist": [
    "> 1%",
    "last 3 version"
  ],
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@nurminen/html-beautify-webpack-plugin": "^1.1.3",
    "@uvarov.frontend/pug-bem-plain-loader": "^1.1.6",
    "@vue/compiler-sfc": "^3.2.36",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.4",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.9",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-vue": "^9.0.1",
    "ftp-deploy": "^2.4.2",
    "glob-import-loader": "^1.2.0",
    "html-loader": "^3.1.0",
    "html-replace-webpack-plugin": "^2.6.0",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "mini-css-extract-plugin": "^2.6.0",
    "perfectionist": "^2.4.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "postcss-preset-env": "^7.6.0",
    "pug": "^3.0.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "stylelint": "^14.8.4",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.2.0",
    "terser-webpack-plugin": "^5.3.1",
    "twig-html-loader": "^0.1.9",
    "vue": "^3.2.36",
    "vue-loader": "^17.0.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  }
}
